{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@src/*": ["./src/*"],
      "@lib/*": ["./src/lib/*"],
      "@http/*": ["./src/http/*"],
      "@routes/*": ["./src/routes/*"],
      "@type/*": ["./src/types/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@services/*": ["./src/services/*"]
    }
  },
  "include": ["./src/**/*"]
}
